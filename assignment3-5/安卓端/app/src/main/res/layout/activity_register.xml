<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cc"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF">
        <ImageButton
            android:id="@+id/login_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:onClick="back_click"
            android:background="@drawable/returnlog"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/a">
        <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="注 册"
            android:textSize="40dp"
            android:textColor="#000000"
            tools:ignore="MissingConstraints"

            app:layout_constraintBottom_toTopOf="@id/userName_layout"
            app:layout_constraintStart_toStartOf="@id/userName_layout"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/userName_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="#00FFFFFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/sname_edit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_edittext_style"
                android:radius="3dip"
                android:hint="请输入姓名"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ssex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_edittext_style"
                android:ems="10"
                android:hint="请输入性别"
                android:inputType="textPersonName"
                android:radius="3dip"
                android:text=""
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>

        <EditText
            android:id="@+id/spassword_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/login_edittext_style"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:radius="3dip"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sname_edit" />

        <EditText
            android:id="@+id/stel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/login_edittext_style"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="textPhonetic"
            android:radius="3dip"
            android:text=""
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rg_group" />

        <EditText
            android:id="@+id/sno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/login_edittext_style"
            android:ems="10"
            android:hint="请输入学号"
            android:inputType="textPhonetic"
            android:radius="3dip"
            android:text=""
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/stel" />

        <EditText
            android:id="@+id/sclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/login_edittext_style"
            android:ems="10"
            android:hint="请输入班级"
            android:inputType="textPersonName"
            android:radius="3dip"
            android:text=""
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sno" />
        <EditText
            android:id="@+id/sschool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/login_edittext_style"
            android:ems="10"
            android:hint="请输入学校"
            android:inputType="textPersonName"
            android:radius="3dip"
            android:text=""
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sclass" />
        <EditText
            android:id="@+id/sdepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/login_edittext_style"
            android:ems="10"
            android:hint="请输入部门"
            android:inputType="textPersonName"
            android:radius="3dip"
            android:text=""
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sschool" />

    </LinearLayout>

    <Button
        android:id="@+id/reg_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="111dp"
        android:singleLine="true"
        android:gravity="center"
        android:text="注册完成"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#200E2ECE"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/reg_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="111dp"
        android:background="#DC000000"
        android:onClick="back_click"
        android:singleLine="true"
        android:gravity="center"
        android:text="返回登录"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_button" /-->

    <LinearLayout
        android:id="@+id/rg_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:orientation="horizontal"
        android:background="#00FFFFFF"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:text="你是："
            android:textSize="20dp"
             />

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/teacher_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="教师" />

            <RadioButton
                android:id="@+id/student_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="学生" />

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>